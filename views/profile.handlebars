{{> nav }}
<main class="profile-container">
    <h2 class="work-feature-block-header row">My Profile</h2>
    <div class="work-feature-block row flex-container align-center">
        <div columns small-6>
            <div>
                <img class="work-feature-block-image" src="https://placehold.it/200x200" />
            </div>
        </div>
        <div columns small-6 class="work-feature-block-profile">
            <div row>
                <h3>Profile Info</h3>
                <ul>
                    <li>Full Name: {{ fullName }}</li>
                    <li>Email: {{ email }}</li>
                    <li>Age: {{ age }}</li>
                </ul>
            </div>
            <div row>
                <h3>Membership</h3>
                <li>Member Since: 12/22/2020</li>
            </div>
        </div>
    </div>
    <div row>
        <h2>My Productivity</h2>
        <ul class="list-group">
            <li class="list-group-item" id="b1" >Work Result</li>
            <li class="list-group-item" id="b2">Sleep Result</li>
            <li class="list-group-item" id="b3">Play Result</li>
        </ul>
    </div>
</main>
<footer class="footer">
    <div class="clearfix">
        <a class="hollow button alert" href="/logout" id="logout">LOGOUT <i class="fas fa-sign-out-alt"></i></a>
    </div>
</footer>

<script src="./assets/js/profile.js"></script>